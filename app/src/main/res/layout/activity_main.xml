<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorAccent"
                                             tools:context=".MainActivity">

    <TextView
            android:text="Chinese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectedFoodText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="163dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="163dp" android:fontFamily="@font/muli_bold" android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.49" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp" app:srcCompat="@drawable/dd_logo"
            android:id="@+id/imageView" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Decide !"
            android:layout_width="428dp"
            android:layout_height="48dp"
            android:id="@+id/decidebutton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@color/colorPrimary" android:fontFamily="@font/muli_bold"
            android:textSize="18sp" android:textColor="@color/colorAccent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addFoodText"
            android:fontFamily="@font/muli_bold" android:hint="add new food..."
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/addFoodButton"/>
    <Button
            android:text="Add Food"
            android:layout_width="230dp"
            android:layout_height="43dp"
            android:id="@+id/addFoodButton" android:fontFamily="@font/muli_bold"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimary"
            android:textColor="@color/colorAccent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="80dp" app:layout_constraintBottom_toTopOf="@+id/decidebutton"/>
</android.support.constraint.ConstraintLayout>